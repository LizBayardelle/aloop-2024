<div class="container-fluid py-4">

  <!-- Breadcrumbs -->
  <%= render 'shared/admin_breadcrumbs' %>

  <div class="row justify-content-center">
    <div class="col-lg-10">
      <header class="text-center mb-5">
        <h1 class="display-4 fw-bold mb-2">Admin Dashboard</h1>
        <p class="text-muted">Manage your Aloop Offroad store</p>
      </header>

      <div class="row g-4">
        <div class="col-md-6 col-lg-3">
          <%= link_to admin_products_path, class: "text-decoration-none" do %>
            <div class="admin-card">
              <div class="admin-card-icon">
                <i class="fas fa-box"></i>
              </div>
              <h5 class="admin-card-title">Products</h5>
              <p class="admin-card-text">Manage inventory, pricing, and product details</p>
              <div class="admin-card-arrow">→</div>
            </div>
          <% end %>
        </div>

        <div class="col-md-6 col-lg-3">
          <%= link_to admin_sales_path, class: "text-decoration-none" do %>
            <div class="admin-card">
              <div class="admin-card-icon">
                <i class="fas fa-chart-line"></i>
              </div>
              <h5 class="admin-card-title">Sales</h5>
              <p class="admin-card-text">Track orders, revenue, and customer data</p>
              <div class="admin-card-arrow">→</div>
            </div>
          <% end %>
        </div>

        <div class="col-md-6 col-lg-3">
          <%= link_to admin_users_path, class: "text-decoration-none" do %>
            <div class="admin-card">
              <div class="admin-card-icon">
                <i class="fas fa-users"></i>
              </div>
              <h5 class="admin-card-title">Users</h5>
              <p class="admin-card-text">Manage customer accounts and permissions</p>
              <div class="admin-card-arrow">→</div>
            </div>
          <% end %>
        </div>

        <div class="col-md-6 col-lg-3">
          <%= link_to admin_blog_path, class: "text-decoration-none" do %>
            <div class="admin-card">
              <div class="admin-card-icon">
                <i class="fas fa-blog"></i>
              </div>
              <h5 class="admin-card-title">Blog</h5>
              <p class="admin-card-text">Create and manage blog posts and content</p>
              <div class="admin-card-arrow">→</div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>