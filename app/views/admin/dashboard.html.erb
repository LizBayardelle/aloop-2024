<div class="container-fluid py-4">
  
  <!-- Breadcrumbs -->
  <%= render 'shared/admin_breadcrumbs' %>

  <div class="row justify-content-center">
    <div class="col-lg-8">
      <header class="text-center mb-5">
        <h1 class="h2 mb-2">Admin Dashboard</h1>
        <p class="text-muted">Manage your Aloop Offroad store</p>
      </header>

      <div class="row g-4">
        <div class="col-md-6">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center p-4">
              <div class="bg-primary text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                <i class="fas fa-box fa-2x"></i>
              </div>
              <h5 class="card-title">Products</h5>
              <p class="card-text text-muted">Manage inventory, pricing, and product details</p>
              <%= link_to admin_products_path, class: "btn btn-primary" do %>
                <i class="fas fa-arrow-right me-1"></i> Manage Products
              <% end %>
            </div>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center p-4">
              <div class="bg-success text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                <i class="fas fa-chart-line fa-2x"></i>
              </div>
              <h5 class="card-title">Sales</h5>
              <p class="card-text text-muted">Track orders, revenue, and customer data</p>
              <%= link_to admin_sales_path, class: "btn btn-success" do %>
                <i class="fas fa-arrow-right me-1"></i> View Sales
              <% end %>
            </div>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center p-4">
              <div class="bg-info text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                <i class="fas fa-users fa-2x"></i>
              </div>
              <h5 class="card-title">Users</h5>
              <p class="card-text text-muted">Manage customer accounts and permissions</p>
              <%= link_to admin_users_path, class: "btn btn-info" do %>
                <i class="fas fa-arrow-right me-1"></i> Manage Users
              <% end %>
            </div>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center p-4">
              <div class="bg-warning text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                <i class="fas fa-blog fa-2x"></i>
              </div>
              <h5 class="card-title">Blog</h5>
              <p class="card-text text-muted">Create and manage blog posts and content</p>
              <%= link_to admin_blog_path, class: "btn btn-warning" do %>
                <i class="fas fa-arrow-right me-1"></i> Manage Blog
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>