<div class="container-fluid py-4">
  
  <!-- Breadcrumbs -->
  <%= render 'shared/admin_breadcrumbs' %>

  <div class="row mb-4">
    <div class="col">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="h2 mb-1">Blog Management</h1>
          <p class="text-muted mb-0">Create and manage blog posts and categories</p>
        </div>
        <div class="d-flex gap-2">
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newBlogModal">
            <i class="fas fa-plus me-1"></i> New Blog Post
          </button>
          <%= link_to admin_users_path, class: "btn btn-outline-secondary" do %>
            <i class="fas fa-users me-1"></i> Manage Users
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%= render partial: "blogs/modal_new", locals: { blog: Blog.new } %>

  <!-- Categories Section -->
  <div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
      <h5 class="mb-0">
        <i class="fas fa-tags me-2"></i>
        Blog Categories
      </h5>
      <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#newCategoryModal">
        <i class="fas fa-plus me-1"></i> Add Category
      </button>
    </div>
    <div class="card-body">
      <div class="d-flex flex-wrap gap-2">
        <% BlogCategory.all.each do |category| %>
          <span class="badge bg-primary fs-6 p-2 cursor-pointer" data-bs-toggle="modal" data-bs-target="#editCategory<%= category.id %>Modal">
            <%= category.name %> <i class="fas fa-edit ms-1"></i>
          </span>
        <% end %>
      </div>
    </div>
  </div>

  <%= render partial: "blog_categories/modal_new", locals: { category: BlogCategory.new } %>
  <% BlogCategory.all.each do |category| %>
    <%= render partial: "blog_categories/modal_edit", locals: { category: category } %>
  <% end %>

  <!-- Blog Posts Table -->
  <div class="card border-0 shadow-sm">
    <div class="card-header bg-white">
      <h5 class="mb-0">
        <i class="fas fa-blog me-2"></i>
        Blog Posts
      </h5>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="bg-light">
            <tr>
              <th class="border-0">Title</th>
              <th class="border-0">Categories</th>
              <th class="border-0">Author</th>
              <th class="border-0">Published</th>
              <th class="border-0">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% Blog.all.each do |blog| %>
              <tr>
                <td>
                  <div class="fw-bold"><%= blog.title %></div>
                  <div class="text-muted small">
                    <%= blog.published? ? 'Published' : 'Draft' %>
                    <% if blog.published_at %>
                      on <%= blog.published_at.strftime('%b %d, %Y') %>
                    <% end %>
                  </div>
                </td>
                <td>
                  <% blog.blog_categories.each do |category| %>
                    <span class="badge bg-secondary me-1"><%= category.name %></span>
                  <% end %>
                </td>
                <td>
                  <div class="fw-bold"><%= blog.user.full_name %></div>
                  <div class="text-muted small"><%= blog.user.email %></div>
                </td>
                <td>
                  <% if blog.published_at %>
                    <%= blog.published_at.strftime('%B %-d, %Y') %>
                  <% else %>
                    <span class="text-muted">Not published</span>
                  <% end %>
                </td>
                <td>
                  <div class="btn-group" role="group">
                    <%= link_to blog_path(blog), class: "btn btn-sm btn-outline-primary", title: "View" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#editBlog<%= blog.id %>Modal" title="Edit">
                      <i class="fas fa-edit"></i>
                    </button>
                    <%= link_to blog_path(blog), method: :delete, class: "btn btn-sm btn-outline-danger", title: "Delete", data: {confirm: "Are you sure you want to delete this blog post?"} do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </div>
                  <%= render partial: "blogs/modal_edit", locals: { blog: blog } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<style>
  .cursor-pointer {
    cursor: pointer;
  }
</style>