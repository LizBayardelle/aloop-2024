<div class="container-fluid py-4">
  
  <!-- Breadcrumbs -->
  <%= render 'shared/admin_breadcrumbs' %>
  
  <!-- Admin Header -->
  <div class="row mb-4">
    <div class="col">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="h2 mb-1">Sales Dashboard</h1>
          <p class="text-muted mb-0">Manage and track all customer orders</p>
        </div>
        <div class="d-flex gap-2">
          <%= link_to admin_products_path, class: "btn btn-outline-primary" do %>
            <i class="fas fa-box me-1"></i> Manage Products
          <% end %>
          <%= link_to admin_users_path, class: "btn btn-outline-secondary" do %>
            <i class="fas fa-users me-1"></i> Manage Users
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Sales Component Container -->
  <div class="card border-0 shadow-sm">
    <div class="card-body p-0">
      <div id="admin-sales-root" data-orders="<%= @orders.to_json(include: :order_items) %>"></div>
    </div>
  </div>


</div>

<style>
  .gap-2 {
    gap: 0.5rem;
  }
  
  .card {
    border-radius: 12px;
  }
  
  .btn {
    border-radius: 8px;
  }
  
  .shadow-sm {
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
  }
  
  /* Gradient backgrounds for stats cards - Aloop brand colors */
  .bg-gradient-primary {
    background: linear-gradient(135deg, #2e3d99 0%, #4a5bc7 100%) !important;
    color: white !important;
  }
  
  .bg-gradient-success {
    background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
    color: white !important;
  }
  
  .bg-gradient-info {
    background: linear-gradient(135deg, #17a2b8 0%, #6f42c1 100%) !important;
    color: white !important;
  }
  
  .bg-gradient-warning {
    background: linear-gradient(135deg, #cd2127 0%, #e74c3c 100%) !important;
    color: white !important;
  }
  
  /* Text size utilities */
  .text-xs {
    font-size: 0.75rem;
  }
  
  /* Better spacing for admin components */
  #admin-sales-root .card {
    border-radius: 12px;
  }
  
  #admin-sales-root .table th {
    font-weight: 600;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  @media (max-width: 768px) {
    .d-flex.justify-content-between {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
