<div class="container-fluid py-4">
  
  <!-- Breadcrumbs -->
  <%= render 'shared/admin_breadcrumbs' %>

  <div class="row mb-4">
    <div class="col">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="h2 mb-1">Products</h1>
          <p class="text-muted mb-0">Manage your inventory and product catalog</p>
        </div>
        <div class="d-flex gap-2">
          <%= link_to admin_sales_path, class: "btn btn-outline-success" do %>
            <i class="fas fa-chart-line me-1"></i> View Sales
          <% end %>
          <%= link_to admin_users_path, class: "btn btn-outline-secondary" do %>
            <i class="fas fa-users me-1"></i> Manage Users
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="card border-0 shadow-sm">
    <div class="card-body p-0">
      <div id="admin-products-root" data-products="<%= @products.to_json %>" data-categories="<%= @categories.to_json %>" data-bike-models="<%= @bike_models.to_json %>"></div>
    </div>
  </div>
  
</div>