<div class="container-fluid py-4">
  
  <!-- Breadcrumbs -->
  <%= render 'shared/admin_breadcrumbs' %>

  <div class="row mb-4">
    <div class="col">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="h2 mb-1">Users & Administrators</h1>
          <p class="text-muted mb-0">Manage user accounts and permissions</p>
        </div>
        <div class="d-flex gap-2">
          <%= link_to admin_products_path, class: "btn btn-outline-primary" do %>
            <i class="fas fa-box me-1"></i> Manage Products
          <% end %>
          <%= link_to admin_sales_path, class: "btn btn-outline-success" do %>
            <i class="fas fa-chart-line me-1"></i> View Sales
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white">
          <h5 class="mb-0">
            <i class="fas fa-user-shield me-2"></i>
            Administrators
          </h5>
        </div>
        <div class="card-body">
          <% User.where(admin: true).each do |user| %>
            <div class="d-flex align-items-center mb-3 pb-3 <%= 'border-bottom' unless user == User.where(admin: true).last %>">
              <div class="me-3">
                <% if user.image.attached? %>
                  <img src="<%= polymorphic_url(user.image) %>" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;" />
                <% else %>
                  <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                    <%= user.full_name.present? ? user.full_name.split.map(&:first).join.upcase : user.email.first.upcase %>
                  </div>
                <% end %>
              </div>
              <div>
                <div class="fw-bold"><%= user.full_name.present? ? user.full_name : user.email.split('@').first.titleize %></div>
                <div class="text-muted small"><%= user.email %></div>
                <% if user.job_title.present? %>
                  <div class="text-muted small"><%= user.job_title %></div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-white">
          <h5 class="mb-0">
            <i class="fas fa-users me-2"></i>
            Customer Users
          </h5>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead class="bg-light">
                <tr>
                  <th class="border-0">User</th>
                  <th class="border-0">Contact</th>
                  <th class="border-0">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% User.where(admin: [false, nil]).each do |user| %>
                  <tr>
                    <td>
                      <div class="fw-bold"><%= user.full_name.present? ? user.full_name : user.email.split('@').first.titleize %></div>
                      <div class="text-muted small">Member since <%= user.created_at.strftime('%b %Y') %></div>
                    </td>
                    <td>
                      <div><%= user.email %></div>
                      <% if user.phone.present? %>
                        <div class="text-muted small"><%= user.phone %></div>
                      <% end %>
                    </td>
                    <td>
                      <%= link_to authorize_user_path(user), method: :post, class: "btn btn-sm btn-outline-warning", data: { confirm: "Make #{user.full_name.present? ? user.full_name : user.email} an administrator?" } do %>
                        <i class="fas fa-user-shield me-1"></i> Make Admin
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>