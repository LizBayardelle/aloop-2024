<div class="modal fade" id="editSubcategory<%= sub.id %>Modal" tabindex="-1" aria-labelledby="editSubcategory<%= sub.id %>ModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editSubcategory<%= sub.id %>ModalLabel">Edit <%= sub.name %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= simple_form_for(sub) do |f| %>
        <div class="modal-body">
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
          <%= f.input :name %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <%= link_to "Delete Subcategory", blog_subcategory_path(sub), method: :delete, class: "btn btn-red-outline", data: {confirm: "Are you sure you want to delete that subcategory?"} %>
          <%= f.submit "Save Subcategory", class: "btn btn-blue-outline" %>
        </div>
      <% end %>
    </div>
  </div>
</div>