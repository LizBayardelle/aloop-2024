<main id="notPaid" class="py-5 container">
  <header class="text-center">
    <div class="progress mb-4 w-75 ms-auto me-auto">
      <div class="progress-bar" role="progressbar" style="width: 80%;" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100">80%</div>
    </div>

    <% if current_user && current_user.admin && @order != @current_order %>
      <h1>Payment To Be Made</h1>
    <% else %>
      <h1>Complete Your Payment</h1>
    <% end %>

    <p>Order #<%= order.id.to_s.rjust(6, "0") %></p>

  </header>

  <section>
    <%= render partial: "orders/order_info", locals: { edit_shipping_possible: true } %>
  </section>

  <section class="payment-boxes text-center pt-4">
    <%= render partial: "orders/payment", locals: { order: order } %>
    <%= render partial: "orders/form_paid", locals: { order: order } %>
  </section>
</main>