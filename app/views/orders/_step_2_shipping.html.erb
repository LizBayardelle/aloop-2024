<main id="notPaid" class="py-5 container">
  <header class="text-center">

    <div class="progress mb-4 w-75 ms-auto me-auto">
      <div class="progress-bar" role="progressbar" style="width: 40%;" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100">40%</div>
    </div>

    <% if current_user && current_user.admin && @order != @current_order %>
      <h1>Shipping Information</h1>
    <% else %>
      <h1>Your Shipping Info</h1>
    <% end %>
    
  </header>




  <section class="text-center pt-4">
    <%= simple_form_for(@order) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs row">
        <%= f.hidden_field :shipping_info, value: true %>
        
        <div class="col-12 col-md-6">
          <%= f.input :ship_to_name %>
        </div> <!-- col -->
        <div class="col-12 col-md-6">
          <%= f.input :customer_email %>
        </div> <!-- col -->
        <div class="col-12 col-md-6">
          <%= f.input :address_line_1 %>
        </div> <!-- col -->
        <div class="col-12 col-md-6">
          <%= f.input :address_line_2 %>
        </div> <!-- col -->
        <div class="col-12 col-md-4">
          <%= f.input :city %>
        </div> <!-- col -->
        <div class="col-12 col-md-2">
          <%= f.input :state %>
        </div> <!-- col -->
        <div class="col-12 col-md-3">
          <%= f.input :postal_code %>
        </div> <!-- col -->
        <div class="col-12 col-md-3">
          <%= f.input :country, class: "countrypicker" %>
        </div> <!-- col -->

      </div> <!-- row -->
    </section>




    <section class="proceed-to-checkout">
      <div class="form-actions mt-5 text-center">
        <%= f.submit "See Shipping Options", class: "btn" %>
      </div>
    <% end %>
  </section>
  
</main>