  <div class="col-lg-4 mb-5">
    <div class="card h-100 shadow border-0">
        <img class="card-img-top" src="<%= blog.image_url %>" alt="<%= blog.title %>" />
        <div class="card-body p-4">
            <% blog.blog_categories.each do |category| %>
                <%= link_to category.name, blog_category_path(category), class: "badge blue rounded-pill mb-2" %>
              <% end %>
            <a class="text-decoration-none link-dark stretched-link" href="#!"><div class="h5 card-title mb-3"><%= blog.title %></div></a>
            <p class="card-text mb-0"><%= blog.teaser %></p>
        </div>
        <div class="card-footer p-4 pt-0 bg-transparent border-top-0">
            <div class="d-flex align-items-end justify-content-between">
                <div class="d-flex align-items-center">
                    <div class="profile-image me-3">
                        <% if blog.user&.image.attached? %>
                            <img src="<%= url_for(blog.user.image) %>" alt="<%= blog.user.full_name %>" />
                        <% else %>
                            <img src="https://t4.ftcdn.net/jpg/02/23/50/73/360_F_223507349_F5RFU3kL6eMt5LijOaMbWLeHUTv165CB.jpg" alt="Default User Image" />
                        <% end %>
                    </div>
                    <div class="small">
                        <div class="fw-bold"><%= blog.user.full_name %></div>
                        <div class="text-muted"><%= blog.published_at.strftime('%B %-d, %Y') %></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>