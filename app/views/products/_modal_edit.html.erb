<div class="modal fade" id="editProduct<%= product.id %>Modal" tabindex="-1" aria-labelledby="editProduct<%= product.id %>ModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editProduct<%= product.id %>ModalLabel">Edit <%= product.name %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= render partial: "products/modal_innards", locals: { product: product } %>
    </div>
  </div>
</div>