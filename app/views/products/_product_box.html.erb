<div class="col-sm-6 col-md-3 mb-4">
  <div class="card h-100 shadow-sm">
    <%= link_to product_path(product), class: "text-decoration-none" do %>
      <div class="position-relative">
        <% if product.main_photos_count == 0 %>
          <% demo_picture_url = url_for(assets/placeholder.jpg) %>
        <% else %>
          <% demo_picture_url = url_for(product.main_photos.first) %>
        <% end %>

        <%= image_tag demo_picture_url, class: "card-img-top", alt: product.name, style: "height: 200px; object-fit: cover;" %>
        <div class="position-absolute top-0 end-0 p-2">
          <span class="badge bg-red"><%= product.display_price %></span>
        </div>
      </div>
      <div class="card-body d-flex flex-column">
        <h3 class="card-title h5 mb-1"><%= product.name %></h3>
        <p class="card-text small text-muted mb-2"><em><%= product.undertitle %></em></p>
        <div class="mt-auto">
          <% if product.display_price.include?(" - ") %>
            <%= link_to "Customize It", product_path(product), class: "btn btn-outline-red btn-sm w-100" %>
          <% else %>
            <%= link_to product.display_price, product_path(product), class: "btn btn-outline-red btn-sm w-100" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>