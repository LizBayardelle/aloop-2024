<div class="col-lg-3 col-md-4 col-sm-6 mb-4">
  <%= link_to product_path(product), class: "text-decoration-none product-card-link" do %>
    <div class="product-card h-100">
      <div class="product-card-image">
        <% if product.main_photos_count == 0 %>
          <% demo_picture_url = asset_path('placeholder.jpg') %>
        <% else %>
          <% demo_picture_url = url_for(product.main_photos.first) %>
        <% end %>
        <%= image_tag demo_picture_url, alt: product.name, loading: "lazy" %>
        <div class="product-card-overlay">
          <span class="view-details">View Details</span>
        </div>
      </div>
      <div class="product-card-body">
        <h3 class="product-card-title"><%= product.name %></h3>
        <% if product.undertitle.present? %>
          <p class="product-card-subtitle"><%= product.undertitle %></p>
        <% end %>
        <div class="product-card-footer">
          <span class="product-card-price"><%= product.display_price %></span>
          <span class="product-card-arrow">â†’</span>
        </div>
      </div>
    </div>
  <% end %>
</div>