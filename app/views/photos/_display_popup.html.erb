<div class="modal fade" id="photoModal<%= photo.id %>" tabindex="-1" aria-labelledby="photoModal<%= photo.id %>Label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        <img class="w-100" src="<%= url_for(photo.image) %>">
        <p class="mt-3"><%= photo.comments %></p>

        <% if current_user && current_user.admin %>
          <% if !photo.approved %>
            <%= link_to "Approve", approve_photo_path(photo), method: :post, class: "btn btn-black-outline" %>
          <% end %>
          <%= link_to "Delete", photo_path(photo), method: :delete, class: "btn btn-black-outline", data: {confirm: "Are you sure you want to delete that photo?"} %>
        <% end %>

      </div> <!-- modal body -->
    </div>  <!-- modal content -->
  </div> <!-- modal dialog -->
</div> <!-- modal -->